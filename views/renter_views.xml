<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Garage Slot Views -->
        <record id="view_garage_slot_tree" model="ir.ui.view">
            <field name="name">garage.slot.tree</field>
            <field name="model">garage.slot</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="gs_number" placeholder="e.g., A-15"/>
                    <field name="gs_description" placeholder="e.g., Underground Level 1, Slot A-15"/>
                </tree>
            </field>
        </record>

        <record id="view_garage_slot_form" model="ir.ui.view">
            <field name="name">garage.slot.form</field>
            <field name="model">garage.slot</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="gs_number" placeholder="Enter garage slot number"/>
                            <field name="gs_description" placeholder="Enter detailed description of the garage slot"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Scheduled Payment Views -->
        <record id="view_scheduled_payment_tree" model="ir.ui.view">
            <field name="name">scheduled.payment.tree</field>
            <field name="model">scheduled.payment</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sp_description" placeholder="e.g., Monthly Rent, Maintenance Fee"/>
                    <field name="sp_amount" placeholder="0.00"/>
                    <field name="sp_due_date"/>
                    <field name="sp_is_notified" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="view_scheduled_payment_form" model="ir.ui.view">
            <field name="name">scheduled.payment.form</field>
            <field name="model">scheduled.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sp_description" placeholder="Enter payment description"/>
                            <field name="sp_amount" placeholder="Enter payment amount"/>
                            <field name="sp_due_date"/>
                            <field name="sp_is_notified" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Building Renter Main Views -->
        <record id="view_building_renter_tree" model="ir.ui.view">
            <field name="name">building.renter.tree</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="br_company_id"/>
                    <field name="br_communications_officer_id"/>
                    <field name="br_invitation_count"/>
                </tree>
            </field>
        </record>

        <record id="view_building_renter_form" model="ir.ui.view">
            <field name="name">building.renter.form</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_invitations" type="object" string="View Invitations" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invitations" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="br_invitation_count" widget="statinfo" string="Invitations"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="br_company_id" placeholder="Select the company associated with this renter"/>
                                <field name="br_communications_officer_id" placeholder="Select the communications officer"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Garage Slots">
                                <field name="br_garage_slot_ids">
                                    <tree editable="bottom">
                                        <field name="gs_number" placeholder="e.g., A-15"/>
                                        <field name="gs_description" placeholder="e.g., Underground Level 1, Slot A-15"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Scheduled Payments">
                                <field name="br_scheduled_payment_ids">
                                    <tree editable="bottom">
                                        <field name="sp_description" placeholder="e.g., Monthly Rent, Maintenance Fee"/>
                                        <field name="sp_amount" placeholder="0.00"/>
                                        <field name="sp_due_date"/>
                                        <field name="sp_is_notified" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_building_renter_search" model="ir.ui.view">
            <field name="name">building.renter.search</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Name"/>
                    <field name="br_company_id" string="Company"/>
                    <field name="br_communications_officer_id" string="Communications Officer"/>
                    <separator/>
                    <filter name="filter_by_company" string="Group By Company" domain="[]" context="{'group_by': 'br_company_id'}"/>
                    <filter name="filter_by_officer" string="Group By Communications Officer" domain="[]" context="{'group_by': 'br_communications_officer_id'}"/>
                </search>
            </field>
        </record>

        <!-- Building Renter Actions -->
        <record id="action_building_renter_tree" model="ir.actions.act_window">
            <field name="name">Building Renters</field>
            <field name="res_model">building.renter</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_building_renter_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first renter!
                </p>
                <p>
                    Manage building renters with their company information, communications officer, garage slots, and scheduled payments.
                </p>
            </field>
        </record>

    </data>
</odoo>
