<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Email Template: New Invitation -->
        <record id="email_template_new_invitation" model="mail.template">
            <field name="name">J Reception - New Invitation</field>
            <field name="model_id" ref="model_reception_invitation"/>
            <field name="subject">Invitation to Building Visit - <t t-esc="object.ri_sequence"/></field>
            <field name="email_from"><t t-esc="object.ri_responsible_user_id.email or user.email"/></field>
            <field name="email_to"><t t-esc="object.ri_guest_email"/></field>
            <field name="body_html" type="html">
<![CDATA[
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear <t t-esc="object.ri_guest_name"/>,</p>
                    
                    <p>You have been invited to visit our building. Please find the details below:</p>
                    
                    <table style="border-collapse: collapse; width: 100%; margin: 20px 0;">
                        <tr style="background-color: #f9f9f9;">
                            <td style="padding: 8px; border: 1px solid #ddd; font-weight: bold;">Invitation Number:</td>
                            <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="object.ri_sequence"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd; font-weight: bold;">Date &amp; Time:</td>
                            <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="object.ri_invitation_datetime"/></td>
                        </tr>
                        <tr style="background-color: #f9f9f9;">
                            <td style="padding: 8px; border: 1px solid #ddd; font-weight: bold;">Renter:</td>
                            <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="object.ri_renter_id.name"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd; font-weight: bold;">Responsible Person:</td>
                            <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="object.ri_responsible_user_id.name"/></td>
                        </tr>
                    </table>
                    
                    <t t-if="object.env['ir.config_parameter'].sudo().get_param('j_reception.location_url')">
                        <p><strong>Location:</strong> <a t-attf-href="#{object.env['ir.config_parameter'].sudo().get_param('j_reception.location_url')}" target="_blank">Click here for directions</a></p>
                    </t>
                    
                    <p>Please arrive on time for your scheduled visit. If you need to reschedule or have any questions, please contact us.</p>
                    
                    <p>Best regards,<br/>
                    <t t-esc="object.ri_responsible_user_id.name"/><br/>
                    <t t-esc="object.env.company.name"/></p>
                </div>
]]>
            </field>
        </record>

