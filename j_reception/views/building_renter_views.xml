<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Building Renter Tree View -->
        <record id="view_building_renter_tree" model="ir.ui.view">
            <field name="name">building.renter.tree</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Tenant Name"/>
                    <field name="br_company_id" string="Company"/>
                    <field name="br_officer_id" string="Officer"/>
                    <field name="br_invitation_count" string="Invitations"/>
                </tree>
            </field>
        </record>

        <!-- Building Renter Form View -->
        <record id="view_building_renter_form" model="ir.ui.view">
            <field name="name">building.renter.form</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <form string="Building Tenant">
                    <header>
                        <!-- <button name="action_view_invitations" type="object" string="View Invitations" class="btn-primary"/> -->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invitations" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="br_invitation_count" widget="statinfo" string="Invitations"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="br_company_id" string="Company"/>
                                <field name="br_officer_id" string="Officer"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Garage Slots">
                                <field name="br_garage_slot_ids">
                                    <tree editable="bottom">
                                        <field name="gs_number"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Scheduled Payments">
                                <field name="br_scheduled_payment_ids">
                                    <tree editable="bottom">
                                        <field name="sp_description"/>
                                        <field name="sp_amount"/>
                                        <field name="sp_currency_id"/>
                                        <field name="sp_due_date"/>
                                        <field name="sp_is_notified" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Building Renter Search View -->
        <record id="view_building_renter_search" model="ir.ui.view">
            <field name="name">building.renter.search</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Tenant Name"/>
                    <field name="br_company_id" string="Company"/>
                    <field name="br_officer_id" string="Officer"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_by_company" domain="[]" context="{'group_by': 'br_company_id'}"/>
                        <filter string="Officer" name="group_by_officer" domain="[]" context="{'group_by': 'br_officer_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Building Renter Kanban View -->
        <record id="view_building_renter_kanban" model="ir.ui.view">
            <field name="name">building.renter.kanban</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="br_company_id"/>
                    <field name="br_officer_id"/>
                    <field name="br_invitation_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card" style="background: #ffffff; border: 1px solid #e0e0e0; border-radius: 12px; padding: 20px; margin: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); min-height: 180px;">
                                <div class="oe_kanban_content">
                                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                                        <strong style="color: #2c3e50; font-size: 16px; font-weight: 600;"><field name="name"/></strong>
                                        <span style="background: #3498db; color: white; padding: 4px 10px; border-radius: 20px; font-size: 10px; font-weight: bold;">TENANT</span>
                                    </div>
                                    <div style="margin-bottom: 12px;">
                                        <div style="display: flex; align-items: center; margin-bottom: 8px;">
                                            <i class="fa fa-building" style="color: #7f8c8d; margin-right: 8px; width: 16px;"/>
                                            <span style="color: #34495e; font-size: 13px;"><field name="br_company_id"/></span>
                                        </div>
                                        <div style="display: flex; align-items: center; margin-bottom: 8px;">
                                            <i class="fa fa-user" style="color: #7f8c8d; margin-right: 8px; width: 16px;"/>
                                            <span style="color: #34495e; font-size: 13px;"><field name="br_officer_id"/></span>
                                        </div>
                                        <div style="display: flex; align-items: center;">
                                            <i class="fa fa-calendar" style="color: #7f8c8d; margin-right: 8px; width: 16px;"/>
                                            <span style="color: #34495e; font-size: 13px;"><field name="br_invitation_count"/> Invitations</span>
                                        </div>
                                    </div>
                                    <div style="text-align: center; margin-top: 15px;">
                                        <button name="action_view_invitations" type="object" style="background: #2ecc71; color: white; border: none; padding: 8px 16px; border-radius: 6px; font-size: 12px; cursor: pointer;">View Invitations</button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Building Renter Action -->
        <record id="action_building_renter_tree" model="ir.actions.act_window">
            <field name="name">Building Tenants</field>
            <field name="res_model">building.renter</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_building_renter_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first building tenant
                </p>
                <p>
                    Manage building tenants with company assignments and officer relationships.
                </p>
            </field>
        </record>

        <!-- Building Renter Action -->
        <record id="action_building_renter" model="ir.actions.act_window">
            <field name="name">Building Tenants</field>
            <field name="res_model">building.renter</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_building_renter_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first building tenant
                </p>
                <p>
                    Track building tenants with their company details, communications officer, garage slots, and scheduled payments.
                </p>
            </field>
        </record>

    </data>
</odoo>