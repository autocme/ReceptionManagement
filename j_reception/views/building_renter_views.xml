<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Building Renter Tree View -->
        <record id="view_building_renter_tree" model="ir.ui.view">
            <field name="name">building.renter.tree</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="br_company_id"/>
                    <field name="br_communications_officer_id"/>
                    <field name="br_invitation_count"/>
                </tree>
            </field>
        </record>

        <!-- Building Renter Form View -->
        <record id="view_building_renter_form" model="ir.ui.view">
            <field name="name">building.renter.form</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <form string="Building Renter">
                    <header>
                        <!-- <button name="action_view_invitations" type="object" string="View Invitations" class="btn-primary"/> -->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invitations" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="br_invitation_count" widget="statinfo" string="Invitations"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="br_company_id"/>
                                <field name="br_communications_officer_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Garage Slots">
                                <field name="br_garage_slot_ids">
                                    <tree editable="bottom">
                                        <field name="gs_number"/>
                                        <field name="gs_description"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Scheduled Payments">
                                <field name="br_scheduled_payment_ids">
                                    <tree editable="bottom">
                                        <field name="sp_description"/>
                                        <field name="sp_amount"/>
                                        <field name="sp_due_date"/>
                                        <field name="sp_is_notified" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Building Renter Search View -->
        <record id="view_building_renter_search" model="ir.ui.view">
            <field name="name">building.renter.search</field>
            <field name="model">building.renter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="br_company_id"/>
                    <field name="br_communications_officer_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_by_company" domain="[]" context="{'group_by': 'br_company_id'}"/>
                        <filter string="Communications Officer" name="group_by_officer" domain="[]" context="{'group_by': 'br_communications_officer_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Building Renter Action -->
        <record id="action_building_renter" model="ir.actions.act_window">
            <field name="name">Building Renters</field>
            <field name="res_model">building.renter</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_building_renter_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first building renter
                </p>
                <p>
                    Track building renters with their company details, communications officer, garage slots, and scheduled payments.
                </p>
            </field>
        </record>

    </data>
</odoo>