<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Security Groups -->
        <record id="group_j_reception_renter" model="res.groups">
            <field name="name">J Reception: Renter</field>
            <field name="comment">Limited access to J Reception functionalities - can view renters and create invitations</field>
        </record>

        <record id="group_j_reception_admin" model="res.groups">
            <field name="name">J Reception: Administrator</field>
            <field name="comment">Full access to J Reception functionalities - can manage all renters, invitations, and settings</field>
            <field name="implied_ids" eval="[(4, ref('group_j_reception_renter'))]"/>
        </record>

    </data>
</odoo>